{
  "extends": "./config/tsconfig.common.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "packages",
    "stories",
    ".storybook/*",
    "rollup.build.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
