{
  "extends": "./config/tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    ".storybook/*",
    "packages",
    "rollup.build.ts",
    "stories",
    "util/*",
    "webpack.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
